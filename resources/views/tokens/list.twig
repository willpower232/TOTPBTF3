{% extends 'global.twig' %}
{% block main %}

	{% if folders|length == 0 %}
		<p class="text-center">no tokens to see here</p>
	{% endif %}

	<ul class="folderlist{% if folders | length < 3 %} bigger{% endif %}">
		{% for folder in folders %}
			{% set alt = folder.folder|slice(path|length + 1) %}
			<li>
				<a href="{{ route('tokens.code', [folder.folder]) }}">
					{% if folder.image %}
						<img {% if config('app.lazyloading') %}data-{% endif %}src="/{{ folder.image }}" alt="{{ alt }}" />
					{% else %}
						<span class="replaced-image">{{ alt }}</span>
					{% endif %}
				</a>
			</li>
		{% endfor %}
	</ul>

	{% if not read_only %}
		<a class="button floating blueback" href="{{ route('tokens.create') }}">&#43;</a>
	{% endif %}

{% endblock %}
