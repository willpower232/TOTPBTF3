{% extends 'global.twig' %}
{% block main %}

	{% set breadcrumbs = path|split('/') %}
	{% include 'partials/breadcrumbs.twig' %}

	{% if folders|length == 0 %}
		<p class="text-center">no tokens to see here</p>
	{% endif %}

	<ul class="folderlist{% if folders | length < 3 %} bigger{% endif %}">
		{% for folder in folders %}
			{% set alt = folder.folder|slice(path|length) %}
			<li>
				<a href="/codes{{ folder.folder }}">
					{% if folder.image %}
						<img src="/{{ folder.image }}" alt="{{ alt }}" />
					{% else %}
						<span class="replaced-image">{{ alt }}</span>
					{% endif %}
				</a>
			</li>
		{% endfor %}
	</ul>

	{% if not read_only %}
		<a class="button floating blueback" href="/import">&#43;</a>
	{% endif %}

{% endblock %}
