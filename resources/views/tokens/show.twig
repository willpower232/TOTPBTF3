{% extends 'global.twig' %}
{% block main %}

	<h1>Token</h1>

	<dl>
		<dt>Path</dt>
		<dd>{{ token.path }}</dd>

		<dt>Title</dt>
		<dd>{{ token.title }}</dd>
	</dl>

	{% if not read_only %}
		<a class="button blueback" href="{{ route('tokens.show', [token.id_hash]) }}">Edit</a>
	{% endif %}

	<a class="button greenback" href="{{ route('tokens.code', [token.path]) }}">Code</a>

	<a class="button" href="{{ route('tokens.export', [token.path]) }}">Export</a>

	{% if not read_only %}
		<a class="button redback" href="{{ route('tokens.delete', [token.id_hash]) }}" onclick="return confirm('Are you sure you want to delete this token?')">Delete</a>
	{% endif %}

{% endblock %}
