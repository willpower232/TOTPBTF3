{% extends 'global.twig' %}
{% block main %}

	<h1>Token</h1>

	<dl>
		<dt>Path</dt>
		<dd>{{ token.path }}</dd>

		<dt>Title</dt>
		<dd>{{ token.title }}</dd>
	</dl>

	{% if not read_only %}
		<a class="button blueback" href="/tokens/{{ token.id_hash }}/edit">Edit</a>
	{% endif %}

	<a class="button greenback" href="/codes{{ token.path }}">Code</a>

	<a class="button" href="/export{{ token.path }}">Export</a>

	{% if not read_only %}
		<a class="button redback" href="/tokens/{{ token.id_hash }}/delete" onclick="return confirm('Are you sure you want to delete this token?')">Delete</a>
	{% endif %}

{% endblock %}
