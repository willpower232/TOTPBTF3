{% extends 'global.twig' %}
{% block main %}

	<h1>Profile</h1>

	<dl>
		<dt>Full Name</dt>
		<dd>{{ user.name }}</dd>

		<dt>Email</dt>
		<dd>{{ user.email }}</dd>

		<dt>Light Mode</dt>
		<dd>
			<label class="toggle">
				<input type="checkbox" name="light_mode" {% if user.light_mode %}checked {% endif %} disabled />
				<span class="helper"></span>
			</label>
		</dd>
	</dl>

	{% if not read_only %}
		<a class="button blueback" href="{{ route('session.edit') }}">Edit</a>
	{% endif %}

	<a class="button redback" href="{{ route('session.destroy') }}">Logout</a>

{% endblock %}
